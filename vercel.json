{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "installCommand": "npm install",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "zeroConfig": true
      }
    },
    {
      "src": "server/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["dist/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/index.ts"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/favicon.svg",
      "dest": "/favicon.svg"
    },
    {
      "src": ".*",
      "dest": "/index.html"
    }
  ],
  "env": {
    "DATABASE_URL": "@database_url",
    "ZOHO_EMAIL": "@zoho_email",
    "ZOHO_APP_PASSWORD": "@zoho_app_password",
    "PAYSTACK_SECRET_KEY": "@paystack_secret_key",
    "APP_URL": "@app_url"
  },
  "functions": {
    "server/**": {
      "runtime": "@vercel/node@20.x",
      "maxDuration": 10
    }
  }
}
