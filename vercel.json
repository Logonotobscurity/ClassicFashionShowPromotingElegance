{
  "version": 2,
  "builds": [
    {
      "src": "client/index.html",
      "use": "@vercel/static"
    },
    {
      "src": "server/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/index.ts"
    },
    {
      "src": "/assets/(.*)",
      "dest": "client/public/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "client/index.html"
    }
  ],
  "env": {
    "DATABASE_URL": "postgresql://neondb_owner:AaduLjziCF05@ep-snowy-sea-a5o8auys-pooler.us-east-2.aws.neon.tech/neondb?sslmode=require",
    "ZOHO_EMAIL": "@zoho_email",
    "ZOHO_APP_PASSWORD": "@zoho_app_password",
    "PAYSTACK_SECRET_KEY": "@paystack_secret_key"
  },
  "functions": {
    "server/**/*.ts": {
      "runtime": "nodejs20.x"
    }
  }
}
